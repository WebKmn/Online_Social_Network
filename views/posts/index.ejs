<% posts.reverse().forEach(post=> { %>
    <% if (currentUser.following.includes(post.creator) || post.creator.equals(currentUser._id)) { %>
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-start">
                <div>
                    <span class="h5 text-muted"><%= post.fullName %></span>
                    <span class="h7 text-muted">@<%= post.username %></span>
                </div>
            </div>

        </div>
        <div class="card-body">
            <p class="card-text">
                <%- post.text %>
            </p>
        </div>
        <div class="card-footer">
            <a href="#" class="card-link">Like</a>
            <a href="#" class="card-link">Comment</a>
            <a href="#" class="card-link">Share</a>
            <% if (post.creator.equals(currentUser._id)){ %>
            <a href="<%= `/posts/${post._id}/delete?_method=DELETE` %>"
                class="card-link"
                onclick="return confirm(`Are you sure`)">
                Delete
            </a>
            <% } %>
        </div>
    </div>
    <br>
    <% } %>
<% }) %>
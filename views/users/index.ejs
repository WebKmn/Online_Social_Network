<div class="container margin-from-top margin-from-bottom">
    <h2 class="center">User Table</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Email</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user=> { %>
                <tr>
                    <td>
                        <a href="<%= `/users/${user._id}` %>">
                            <%= user.username %>
                        </a>
                    </td>
                    <td>
                        <%= user.fullName %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <a href="<%= `/users/${user._id}/edit` %>">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
                            onclick="return confirm(`Are you sure`)">
                            Delete
                        </a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>